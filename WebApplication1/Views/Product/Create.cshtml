@model ProductModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductSize" class="control-label"></label>
        <select asp-for="ProductSize" asp-items="Html.GetEnumSelectList<Size>()" class="form-control">
            <option value="">-- Select Size --</option>
        </select>
        <span asp-validation-for="ProductSize" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductPrice" class="control-label"></label>
        <select asp-for="ProductPrice" asp-items="Html.GetEnumSelectList<Price>()" class="form-control">
            <option value="">-- Select Price --</option>
        </select>
        <span asp-validation-for="ProductPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MfgDate" class="control-label"></label>
        <input asp-for="MfgDate" class="form-control" />
        <span asp-validation-for="MfgDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductCategory" class="control-label"></label>
        <select asp-for="ProductCategory" asp-items="Html.GetEnumSelectList<Category>()" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="ProductCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
